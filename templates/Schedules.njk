<header class="space-between">
    <span>{{ competition | prefixTranslate("competition") }}</span>&nbsp;<span><i class="fa {{ type | icon }}"></i></span>
</header>
<table class="xsmall table">
    <thead>
        {% if details.matchDay %}
            <tr class="row">
                <th colspan="{{ 5 if config.logos else 3 }}" class="centered">
                    {{ "MATCHDAY" | translate({matchDayNumber: details.matchDay}) }}
                </th>
            </tr>
        {% endif %}
        <tr class="row">
            <th colspan="{{ 2 if config.logos else 1 }}" class="align-right">{{ "HOME" | translate }}</th>
            <th></th>
            <th colspan="{{ 2 if config.logos else 1 }}" class="align-left">{{ "AWAY" | translate }}</th>
        </tr>
    </thead>
    <tbody>
        {% for index in range(boundaries.firstEntry, boundaries.lastEntry + 1) %}
            <tr class="centered-row {% if index === boundaries.focusEntryIndex %}bright{% endif %}" style="{{ index | fade(boundaries.focusEntryIndex) }}">
                <td class="align-right">
                    {{ list[index].homeTeam | prefixTranslate(details.team) }}
                </td>
                {% if config.logos %}
                    <td><img class="icon {% if not config.colored %}no-color{% endif %}" src="{{ list[index].homeLogo }}"/></td>
                {% endif %}
                <td class="centered">
                    {% if ["IN_PLAY", "PAUSED", "FINISHED", "AWARDED"].includes(list[index].status) %}
                        {{ list[index].homeScore }} - {{ list[index].awayScore }}
                    {% else %}
                        {{ list[index].timestamp | formatMatchStart }}
                    {% endif %}
                </td>
                {% if config.logos %}
                    <td><img class="icon {% if not config.colored %}no-color{% endif %}" src="{{ list[index].awayLogo }}"/></td>
                {% endif %}
                <td class="align-left">
                    {{ list[index].awayTeam | prefixTranslate(details.team) }}
                </td>
            </tr>
        {% else %}
            <tr><td colspan="{{ 5 if config.logos else 3 }}" class="centered">{{ "NO_DATA_AVAILABLE" | translate }}</td></tr>
        {% endfor %}
    </tbody>
</table>
